<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="0123456789"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#737171"
        android:textColor="#FFFFFF"
        android:textSize="80dp"
        android:gravity="right"

        />


    <Button
        android:id="@+id/bt8"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:backgroundTint="#DAD5D5"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:strokeWidth="2dp"
        app:layout_constraintLeft_toRightOf="@id/bt7"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintRight_toLeftOf="@id/bt9"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />


    <Button
        android:id="@+id/bt7"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:backgroundTint="#DAD5D5"
        android:text="7"

        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:strokeWidth="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bt8"


        app:layout_constraintTop_toBottomOf="@id/tv" />

    <Button
        android:id="@+id/btchia"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#FF9800"
        android:text="%"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintLeft_toRightOf="@id/bt9"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/bt9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#DAD5D5"

        android:text="9"
        android:textColor="@color/black"
        android:textSize="50dp"

        app:layout_constraintLeft_toRightOf="@id/bt8"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintRight_toLeftOf="@id/btchia"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />

    <Button
        android:id="@+id/bt4"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:backgroundTint="#DAD5D5"
        app:strokeWidth="2dp"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="50dp"

        app:layout_constraintTop_toBottomOf="@id/bt7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bt5"
        app:layout_constraintVertical_chainStyle="spread_inside"

        />
    <Button
        android:id="@+id/bt5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#DAD5D5"

        android:text="5"
        android:textColor="@color/black"
        android:textSize="50dp"

        app:layout_constraintLeft_toRightOf="@id/bt4"
        app:layout_constraintTop_toBottomOf="@id/bt8"
        app:layout_constraintRight_toLeftOf="@id/bt6"

        />
    <Button
        android:id="@+id/bt6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#DAD5D5"

        android:text="6"
        android:textColor="@color/black"
        android:textSize="50dp"

        app:layout_constraintTop_toBottomOf="@id/bt9"
        app:layout_constraintLeft_toRightOf="@id/bt5"

        />
    <Button
        android:id="@+id/btnhan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#FF9800"

        android:text="x"
        android:textColor="@color/black"
        android:textSize="50dp"

        app:layout_constraintTop_toBottomOf="@id/btchia"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bt6"

        />

    <Button
        android:id="@+id/bt1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#DAD5D5"

        android:text="1"
        android:textColor="@color/black"
        android:textSize="50dp"

        app:layout_constraintTop_toBottomOf="@id/bt4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bt2"
        app:layout_constraintVertical_chainStyle="spread_inside"


        />
    <Button
        android:id="@+id/bt2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#DAD5D5"

        android:text="2"
        android:textColor="@color/black"
        android:textSize="50dp"

        app:layout_constraintTop_toBottomOf="@id/bt5"
        app:layout_constraintLeft_toRightOf="@id/bt1"
        app:layout_constraintRight_toLeftOf="@id/bt3"


        />
    <Button
        android:id="@+id/bt3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#DAD5D5"

        android:text="3"
        android:textColor="@color/black"
        android:textSize="50dp"

        app:layout_constraintTop_toBottomOf="@id/bt6"
        app:layout_constraintLeft_toRightOf="@id/bt2"
        app:layout_constraintRight_toLeftOf="@id/bttru"


        />
    <Button
        android:id="@+id/bttru"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#FF9800"

        android:text="-"
        android:textColor="@color/black"
        android:textSize="50dp"


        app:layout_constraintTop_toBottomOf="@id/btnhan"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/bt3"

        />
    <Button
        android:id="@+id/bt0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#DAD5D5"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt1"
        app:layout_constraintRight_toLeftOf="@id/btcham"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintVertical_chainStyle="spread"


        />
    <Button
        android:id="@+id/btcham"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#DAD5D5"

        android:text="."
        android:textColor="@color/black"
        android:textSize="50dp"

        app:layout_constraintTop_toBottomOf="@id/bt3"
        app:layout_constraintLeft_toRightOf="@id/bt0"
        app:layout_constraintRight_toLeftOf="@id/btcong"
        app:layout_constraintHorizontal_weight="1"



        />


        />
    <Button
        android:id="@+id/btcong"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:strokeWidth="2dp"
        android:backgroundTint="#FF9800"

        android:text="+"
        android:textColor="@color/black"
        android:textSize="50dp"


        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btcham"
        app:layout_constraintTop_toBottomOf="@id/bttru"
        app:layout_constraintHorizontal_weight="1"

        />

</androidx.constraintlayout.widget.ConstraintLayout>